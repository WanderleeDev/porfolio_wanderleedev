---
import Icon from "astro-iconify";
import CardGlassBase from "./base/CardGlassBase.astro";

interface Props {
  icon: string;
  label: string;
  value: string;
}

const { icon, label, value } = Astro.props;
---

<CardGlassBase customClass="card-info flex items-center gap-4 rounded-2xl">
  <div
    class="flex items-center justify-center -rotate-6 w-12 h-12 gradient-soft rounded-xl text-white shadow-md"
    style="background-color: var(--color-primary);"
  >
    <Icon name={icon} class="w-6 h-6" />
  </div>
  <div>
    <p class="text-sm opacity-70">{label}</p>
    <p class="font-medium">{value}</p>
  </div>
</CardGlassBase>

<style scoped>
  .gradient-soft {
    background-image:
      radial-gradient(
        ellipse at 20% 30%,
        rgba(56, 189, 248, 0.25) 0%,
        transparent 100%
      ),
      radial-gradient(
        ellipse at 80% 70%,
        rgba(139, 92, 246, 0.25) 0%,
        transparent 100%
      ),
      radial-gradient(
        ellipse at 60% 20%,
        rgba(236, 72, 153, 0.25) 0%,
        transparent 100%
      ),
      radial-gradient(
        ellipse at 40% 80%,
        rgba(34, 197, 94, 0.25) 0%,
        transparent 100%
      );
  }
</style>
