---
interface Props {
    images: string[],
    name: string,
    index: number,
    backgroundColor: string;
    customClass?: string;
}

const { images, name, index, customClass, backgroundColor } = Astro.props
---

<section class={`folder relative will-change-transform drop-shadow-sm text-gray-900 ${customClass} ${backgroundColor}`}>
    <span class={`block folder-clip-path absolute top-0 left-0  w-4/5 rounded-tl-lg h-full -z-10 -translate-y-10 pt-4 pl-8 bg-inherit text-xs sm:text-base`}>
        {index.toString().padStart(2,'0')}
    </span>
    <div class={`p-12 pl-8 pt-2 h-full font-light rounded-tr-lg bg-inherit`}>
        <h3 class="text-2xl md:text-3xl font-light lg:text-6xl">{name}</h3>
        <slot />
    </div>

    <div class="folder-images absolute hidden top-0 justify-center items-center h-full w-full pointer-events-none gap-2 -z-20 md:flex">
        {
            images.map((image, idx) => (
                <img 
                    src={image} 
                    alt={`Image ${idx + 1} of folder ${name}`} 
                    class="object-cover aspect-square size-10 md:size-24 lg:size-38 scale-50" 
                />
            ))
        }
    </div>
</section>
