---
import Icon from "astro-iconify";

interface Props {
  title: string;
  icon: string;
  color: string;
  hoverColor: string;
}

const { title, icon, color, hoverColor } = Astro.props;
---

<div
  class={`card-wrapper relative overflow-hidden h-full bg-linear-to-br ${color} ${hoverColor} backdrop-blur-sm border border-white/10 rounded-2xl p-1 transition-all duration-500 hover:scale-[1.02] hover:border-white/20
    before:content-[''] before:absolute before:-top-1/2 before:-left-1/2 before:w-[200%] before:h-[200%] before:bg-[linear-gradient(45deg,transparent,rgba(255,255,255,0.1),transparent)] before:rotate-45 before:transition-all before:duration-600 before:opacity-0 hover:before:opacity-100`}
>
  <div
    class="h-full bg-black/40 backdrop-blur-md rounded-xl p-6 flex items-center gap-4 group"
  >
    <div
      class="icon-wrapper relative shrink-0 w-16 h-16 flex items-center justify-center rounded-xl bg-white/5 backdrop-blur-sm border border-white/10 transition-all duration-300 group-hover:scale-110 group-hover:rotate-3
        after:content-[''] after:absolute after:inset-[-4px] after:bg-[linear-gradient(45deg,transparent,rgba(255,255,255,0.1),transparent)] after:rounded-2xl after:opacity-0 after:transition-opacity after:duration-300 group-hover:after:opacity-100"
    >
      <Icon class="w-10 h-10" name={icon} />
    </div>

    <div class="flex-1 min-w-0">
      <h3 class="text-xl font-bold text-white mb-1 truncate">{title}</h3>
      <p class="text-sm text-gray-400 truncate">Ver showcase completo</p>
    </div>
  </div>
</div>

<style>
  .card-wrapper:hover::before {
    animation: shine 1.5s ease-in-out;
  }

  @keyframes shine {
    0% {
      top: -50%;
      left: -50%;
    }
    100% {
      top: 150%;
      left: 150%;
    }
  }

  .card-wrapper:hover .icon-wrapper::after {
    animation: rotate 3s linear infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
