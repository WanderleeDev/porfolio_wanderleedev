---
interface Props {
  url: string
  title: string
}

const { url, title } = Astro.props
---
<a 
  href={`#${url}`} 
  class="relative group flex items-center gap-4 px-4 py-3 rounded-2xl bg-white/4 backdrop-blur-sm border border-white/6 shadow-[0_6px_24px_rgba(2,6,23,0.6)] hover:shadow-[0_18px_50px_rgba(99,102,241,0.08)] transform hover:-translate-y-1 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-indigo-400/20"
  aria-label={`Ir a ${title}`}
>
  <div class="w-10 h-10 flex items-center justify-center rounded-lg shrink-0 bg-gradient-to-br from-indigo-500 via-violet-500 to-pink-500 text-white font-bold">
  	{title.charAt(0).toUpperCase()}
  </div>
  <div class="flex flex-col text-left">
  	<span class="text-sm font-semibold text-white capitalize tracking-wide">{title}</span>
  	<span class="text-xs text-white/70">Ver y explorar {title}</span>
  </div>
  <span class="ml-4 hidden md:inline-flex items-center text-white/80">
  	<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
  		<path d="M9 18l6-6-6-6"></path>
  	</svg>
  </span>
  <span class="absolute left-1/2 -bottom-2 -translate-x-1/2 w-0 h-1 rounded-full bg-gradient-to-r from-pink-400 to-indigo-400 group-hover:w-14 transition-all duration-300"></span>
</a>