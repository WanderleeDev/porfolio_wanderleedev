---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import firaSansWoff2 from "@fontsource/fira-sans-extra-condensed/files/fira-sans-extra-condensed-latin-700-normal.woff2?url";
import Header from "../components/Header/index.astro";
import { getTranslations } from "../i18n/utils";

const lang = Astro.currentLocale as "es" | "en";
const t = getTranslations(lang);
const metaT = t("metadata");
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="preload"
      href={firaSansWoff2}
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="icon" href="/favicon_default.svg" type="image/svg+xml" />
    <link
      rel="icon"
      href="/favicon_dark.svg"
      type="image/svg+xml"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={metaT.description} />
    <meta name="keywords" content={metaT.keywords} />
    <meta name="author" content="WanderleeDev" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://porfolio-2025-seven.vercel.app/" />

    <title>{metaT.title}</title>
    <meta property="og:title" content={metaT.title} />
    <meta property="og:description" content={metaT.description} />
    <meta property="og:image" content="/tom.webp" />
    <meta property="og:url" content="https://wanderleev.dev" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={metaT.title} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaT.title} />
    <meta name="twitter:description" content={metaT.description} />
    <meta name="twitter:image" content="/tom.webp" />
  </head>
  <body
    class="min-h-svh flex flex-col justify-between duration-500 select-none"
  >
    <Header />
    <main
      id="main-container"
      class="flex flex-col gap-20 bg-gradient-dark relative z-10"
    >
      <slot />
    </main>
    <div class="min-h-dvh pointer-events-none" aria-hidden="true"></div>
    <Footer />
  </body>
</html>

<style scoped>
  .bg-gradient-dark {
    background-color: black;
    background-image:
      radial-gradient(
        ellipse at 20% 30%,
        rgba(56, 189, 248, 0.4) 0%,
        transparent 60%
      ),
      radial-gradient(
        ellipse at 80% 70%,
        rgba(139, 92, 246, 0.3) 0%,
        transparent 70%
      ),
      radial-gradient(
        ellipse at 60% 20%,
        rgba(236, 72, 153, 0.25) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse at 40% 80%,
        rgba(34, 197, 94, 0.2) 0%,
        transparent 65%
      );
  }
</style>
